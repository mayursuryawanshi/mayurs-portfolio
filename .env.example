# Environment Configuration
# Copy this file to .env.local and fill in your values

# Base URL for the application (used for routing)
VITE_BASE_URL=/

# Application metadata
VITE_APP_TITLE="Mayur Suryawanshi - Portfolio"
VITE_APP_DESCRIPTION="Modern portfolio website built with React and TypeScript"
VITE_APP_AUTHOR="Mayur Suryawanshi"

# Theme configuration
VITE_DEFAULT_THEME=light
VITE_THEME_STORAGE_KEY=portfolio-theme

# Analytics (optional)
VITE_GA_TRACKING_ID=
VITE_HOTJAR_ID=

# Contact form (optional - for external services)
VITE_CONTACT_FORM_ENDPOINT=
VITE_EMAILJS_SERVICE_ID=
VITE_EMAILJS_TEMPLATE_ID=
VITE_EMAILJS_PUBLIC_KEY=

# Social media links
VITE_GITHUB_URL=https://github.com/yourusername
VITE_LINKEDIN_URL=https://linkedin.com/in/yourprofile
VITE_TWITTER_URL=https://twitter.com/yourusername
VITE_EMAIL=your@email.com

# Development settings
VITE_DEV_PORT=5173
VITE_API_BASE_URL=http://localhost:3001